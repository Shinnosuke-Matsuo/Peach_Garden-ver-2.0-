<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <% if logged_in? %>
      <% if current_user.role == "entrepreneur" %>
        <%= link_to "Peach Garden for entrepreneur", root_path, id: "logo" %>
      <% end %>
      <% if current_user.role == "programmer" %>
        <%= link_to "Peach Garden for programmer", root_path, id: "logo" %>
      <% end %>
      <% if current_user.role == "designer" %>
        <%= link_to "Peach Garden for designer", root_path, id: "logo" %>
      <% end %>
    <% else %>
      <%= link_to "Peach Garden", root_path, id: "logo" %>
    <% end %>

  <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Home", root_path %></li>
        <% if logged_in? %>
          <li><%= link_to "Users", users_path %></li>
          <% unless current_user.role == "entrepreneur" %>
            <li><%= link_to "Matchings", matchings_index_path %></li>
          <% end %>

          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
              Posts <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Post Index", microposts_path %></li>
              <% if current_user.role == "entrepreneur" %>
                <li><%= link_to "New Post", new_micropost_path(current_user) %></li>
              <% end %>
              <li class="divider"></li>
            </ul>
          </li>

          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <% if current_user.profile.nil? %>
                <li><%= link_to "New Profile", new_profile_path(current_user) %></li>
              <% end %>
              <li><%= link_to "User Settings", edit_user_path(current_user) %></li>
              <li><%= link_to "Profile Settings", edit_profile_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", logout_path, method: :delete %>
              </li>
            </ul>
          </li>

        <% else %>
          <li><%= link_to "Users", users_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
              Posts <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Post Index", microposts_path %></li>
              <li class="divider"></li>
            </ul>
          </li>
          <li><%= link_to "Log in", login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
