<% provide(:title, 'All users') %>
<h1>All users</h1>

<p>user search</p>
<%= form_tag(profiles_path, :method => 'get' ) do %>
  <%= text_field_tag :search %>
  <%= submit_tag 'Search', :name => nil %>
<% end %>

<ul class="users">
  <% @profiles.each do |profiles| %>
    <li>
       <% render profiles %>
    </li>
  <% end %>
</ul>
